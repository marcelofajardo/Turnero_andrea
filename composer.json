{
    "name": "turnero/app",
    "description": "Professional Multi-Service Appointment Management System",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "mercadopago/dx-php": "^3.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox",
        "seed": "php bin/seed.php",
        "migrate": "php bin/migrate.php"
    }
}